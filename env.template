# VroomTool Backend Environment Configuration
# Copy this file to .env and update with your actual values

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=vroomtool
DB_USER=vroomtool_user
DB_PASSWORD=your_secure_password_here

# Server Configuration
PORT=3000
NODE_ENV=development
HOST=0.0.0.0

# JWT Secret (generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))")
JWT_SECRET=your_very_long_secure_random_jwt_secret_key_change_this

# Redis Configuration (Optional - for caching and sessions)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Upload Configuration
UPLOAD_DIR=./backend/uploads
MAX_FILE_SIZE=10485760

# Model Configuration
MODEL_CACHE_DIR=./ai-models/models

# Session Configuration
SESSION_SECRET=another_secure_random_session_secret

# Social Media API Keys (Facebook)
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=
FACEBOOK_REDIRECT_URI=http://localhost:3000/api/auth/facebook/callback

# Twitter/X API Keys
TWITTER_CLIENT_ID=
TWITTER_CLIENT_SECRET=
TWITTER_REDIRECT_URI=http://localhost:3000/api/auth/twitter/callback

# LinkedIn API Keys
LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=
LINKEDIN_REDIRECT_URI=http://localhost:3000/api/auth/linkedin/callback

# Instagram API Keys
INSTAGRAM_APP_ID=
INSTAGRAM_APP_SECRET=
INSTAGRAM_REDIRECT_URI=http://localhost:3000/api/auth/instagram/callback

# Email Configuration (Optional - for notifications)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@vroomtool.com

# Logging
LOG_LEVEL=info

# CORS Origins (comma-separated)
CORS_ORIGINS=chrome-extension://,http://localhost:3000

# Production Settings (uncomment for production)
# NODE_ENV=production
# SECURE_COOKIES=true
# TRUST_PROXY=true

